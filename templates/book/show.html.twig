{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Last_read</th>
                <td>{{ book.lastRead ? book.lastRead|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Downloadable</th>
                <td>{{ book.downloadable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Author_id</th>
                <td>{{ book.authorId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
