{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
<div class="row">
    <a href="{{ path('book_index') }}" class="text-secondary mb-3">
        <i class="fas fa-angle-left"></i>
        back to list
    </a>
</div>

{{ form_start(form) }}
<div class="row">
    <div class="col-md-6 col-sm-12 text-center">
        <div class="preview_wrap card">
            {{ img(form.vars.value, {
                'class' : 'preview card-img shadow mw-100',
            })}}
            <div class="preview__overlay card-img-overlay text-white d-flex justify-content-center align-items-center">
                <button class="preview__upload btn btn-outline-light text-uppercase">
                    <i class="fas fa-upload"></i>
                    upload cover
                </button>
            </div>
        </div>
        <div class="preview__errors">{{ form_errors(form.cover_filename)}} </div>
        <div class="d-none">
            {{ form_row(form.cover_filename)}}
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        {{form_widget(form)}}
    </div>

    <div class="col-12 text-right">
        <div class="btn-group">

            {% if delete_btns is defined %}
            {{ include('book/_delete_form.html.twig') }}
            {% endif %}
            <button class="btn btn-success">
                <i class="fas fa-save"></i>
                {{ button_label|default('Save') }}
            </button>
        </div>
    </div>
</div>
{{ form_end(form) }}