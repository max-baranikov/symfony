{% if book.cover %}
    {% set cover =  uploaded_asset(book.getCoverPath) %}
{% else %}
    {% set cover = "/img/cover" %}
{% endif %}

    <img src="{{cover}}" alt="{{book.name}}" 
        {% if params.size is defined %} 
            width="{{params.size}}"
        {% endif %} 
        {% if params.class is defined %} 
            class="{{params.class}}"
        {% endif %} 
    >